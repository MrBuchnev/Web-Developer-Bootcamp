<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        <%= blog.title %>
    </div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <span><%= blog.date.toDateString() %></span> <!-- toDateString transform the date into a readable format -->
            </div>
            <div class="description">
                <p><%- blog.body %></p> <!-- the "=" after the % has been changed to "-" to allow rendering of html tags like "strong" or <p> -->
            </div>
            <a class="ui orange basic button" href="/blogs/<%= blog.id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST"> <!-- DELETE request added to the button -->
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
    
</div>


<% include partials/footer %>